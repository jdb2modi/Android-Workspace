        <activity
            android:name=".Activity_AddBankDetails"
            android:label="@string/title_activity_activity__add_bank_details" >
        </activity>
        <activity
            android:name=".Activity_AddBalance"
            android:label="@string/title_activity_activity__add_balance" >
