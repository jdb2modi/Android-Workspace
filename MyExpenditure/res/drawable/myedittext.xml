<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="20dip" />

            <stroke android:width="1dip" android:color="#000074" />

            <gradient android:angle="180" android:endColor="#000092" android:startColor="#000053" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="20dip" />

            <stroke android:width="1dip" android:color="#000074" />

            <solid android:color="#00007e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="20dip" />

            <stroke android:width="1dip" android:color="#000074" />

            <gradient android:angle="180" android:endColor="#00007e" android:startColor="#0000ff" />
        </shape></item>

</selector>