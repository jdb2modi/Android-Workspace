<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/rel_historyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_logoOnHistory"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/itfactory" />

        <Button
            android:id="@+id/btn_logoutOnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Logout" />

        <TextView
            android:id="@+id/txt_welcomeOnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_homeLogout"
            android:text="Welcome, ITFUser" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_contentOnHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/txt_contentHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History" />

        <LinearLayout
            android:id="@+id/lin_startingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_contentHistory"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_startingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setDate"
                android:text="Set Starting Date" />

            <TextView
                android:id="@+id/txt_startingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Date" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_endingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_startingDate"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_endingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setDate2"
                android:text="Set Ending Date" />

            <TextView
                android:id="@+id/txt_endingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_showHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_endingDate"
            android:layout_centerHorizontal="true"
            android:text="Show History" />
    </RelativeLayout>

</RelativeLayout>