<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/rel_loginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#224581ff" >

        <ImageView
            android:id="@+id/img_loginLogo"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/itfactory" />

        <Button
            android:id="@+id/btn_exitFromLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/mybutton"
            android:text="Exit"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/txt_enterAuthCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Authentication Code : "
            android:textAllCaps="false"
            android:textColor="#0072B2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_enterAuthCode"
            android:hint="Your Authentication Code"
            android:password="true"
            android:textAllCaps="false"
            android:textColor="#0072B2" />

        <Button
            android:id="@+id/btn_authenticateNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_password"
            android:background="@drawable/mybutton"
            android:text="Authenticate Now"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>