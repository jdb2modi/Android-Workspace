<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_bankToRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_manageBankingHeader"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:text="Select Bank to Remove"
        android:textAllCaps="false"
        android:textColor="#0072B2"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerBanksToRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bankToRemove"
        android:layout_margin="5dp" />

</RelativeLayout>