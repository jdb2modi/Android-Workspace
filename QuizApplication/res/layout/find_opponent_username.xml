<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgscreen" >

    <LinearLayout
        android:id="@+id/find_opponent_username_linear_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bar_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/find_opponent_username_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/top_bar_back_button"
            android:onClick="OnClickHandler"
            android:text="@string/back" />

        <com.example.quizapplication.font.TextViewFont
            android:id="@+id/find_opponent_username_textVW_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/find_ur_opponent"
            android:textSize="8pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_opponent_Uname_linear_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_opponent_username_linear_top"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.example.quizapplication.font.TextViewFont
            android:id="@+id/find_opponent_Uname_textVW_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/enter_oppo_userNm"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

        <com.example.quizapplication.font.EditTextFont
            android:id="@+id/find_opponent_Uname_ed_emailadd"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
           android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ed_backgroung"
            android:gravity="center|left"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:paddingLeft="7dp"
            android:singleLine="true"
            android:paddingRight="7dp"
            android:textColor="@android:color/black"
            android:textSize="6pt" />

        <Button
            android:id="@+id/find_opponent_Uname_btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/yellow_button"
            android:onClick="OnClickHandler"
            android:text="@string/go"
            android:textSize="8pt" />
    </LinearLayout>

</RelativeLayout>