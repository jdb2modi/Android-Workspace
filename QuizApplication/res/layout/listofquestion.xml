<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".QuestionDemo" >

    <LinearLayout
        android:id="@+id/llquestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <LinearLayout
        android:id="@+id/llquesTotalQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/quizscreen_txt_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Question"
            android:textColor="#FFFFFF"
            android:textSize="8pt" />
          <TextView
            android:id="@+id/quizscreen_txt_totalQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1/5"
            android:textColor="#FFFFFF"
            android:textSize="8pt" />
        
</LinearLayout>
        <ImageView
            android:id="@+id/quizscreen_imgVw_duster_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/duster_line"
            android:textColor="#FFFFFF" />
   <LinearLayout
        android:id="@+id/llquesText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:gravity="center_horizontal"
        android:orientation="horizontal" >   
        
        <ImageView
            android:id="@+id/questnImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="OnClickHandler"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/quizscreen_txt_questionText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Question Text"
            android:textColor="#FFFFFF"
            android:textSize="8pt" />
        </LinearLayout>
    </LinearLayout>

   <!--  <ViewFlipper
        android:id="@+id/vfmain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" > -->

	 
    <ImageView
            android:id="@+id/largeImage"
             android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:onClick="OnClickHandler"
            android:visibility="gone"
            />
	     
  


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtstartforans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="120sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/llAnswer"
            android:layout_below="@+id/llquesText"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true"
        	android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/txtAns1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Medium Text"
                android:background="@drawable/oval"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:onClick="OnClickHandler" />

            <Button
                android:id="@+id/txtAns2"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:background="@drawable/oval"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                 android:onClick="OnClickHandler" />

            <Button
                android:id="@+id/txtAns3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:background="@drawable/oval"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                 android:onClick="OnClickHandler" />

            <Button
                android:id="@+id/txtAns4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:background="@drawable/oval"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                 android:onClick="OnClickHandler" />
        </LinearLayout>
  <!--   </ViewFlipper> -->

</RelativeLayout>