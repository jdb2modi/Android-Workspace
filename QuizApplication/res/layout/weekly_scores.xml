<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgscreen" >

    <ImageView
        android:id="@+id/weekly_score_imgVw_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bar_bg"
        android:contentDescription="@string/none"
        android:src="@drawable/quiz_main_logo" />

    <com.example.quizapplication.font.TextViewFont
        android:id="@+id/weekly_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weekly_score_imgVw_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/weekly_scores"
        android:textColor="#FFFFFF"
        android:textSize="12pt" />

    <RelativeLayout
        android:id="@+id/weekly_score_relative_ScoreCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weekly_score_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/tournament_end_bg" >

        <com.example.quizapplication.font.TextViewFont
            android:id="@+id/weekly_score_tv_tounmnt_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:text="@string/tournament_ends_in"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/weekly_score_tv_time_Day_1"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="7dp"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/weekly_score_tv_time_Day_2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_Day_1"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

       <TextView
            android:id="@+id/weekly_score_tv_time_HR_1"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_Day_2"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/weekly_score_tv_time_HR_2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_HR_1"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/weekly_score_tv_time_Min_1"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_HR_2"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

       <TextView
            android:id="@+id/weekly_score_tv_time_Min_2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_Min_1"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/weekly_score_tv_time_Sec_1"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_Min_2"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/weekly_score_tv_time_Sec_2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_tounmnt_end"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/weekly_score_tv_time_Sec_1"
            android:background="@drawable/blackbutton_time"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ImageButton
            android:id="@+id/weekly_score_imgbtn_Slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/none"
            android:onClick="OnClickHandler"
            android:src="@drawable/blue_btn_slider" />

        <com.example.quizapplication.font.TextViewFont
            android:id="@+id/weekly_score_tv_time_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_time_Day_1"
            android:layout_marginLeft="7dp"
            android:text="@string/days"
            android:textSize="6pt" />

       <com.example.quizapplication.font.TextViewFont
            android:id="@+id/weekly_score_tv_time_Hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_time_HR_1"
            android:layout_marginLeft="68dp"
            android:text="@string/hours"
            android:textSize="6pt" />

        <com.example.quizapplication.font.TextViewFont
            android:id="@+id/weekly_score_tv_time_Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_time_Day_1"
            android:layout_marginLeft="130dp"
            android:text="@string/minutes"
            android:textSize="6pt" />

       <com.example.quizapplication.font.TextViewFont
            android:id="@+id/homeScreen_txtV"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/weekly_score_tv_time_Sec"
            android:background="@android:color/transparent" />

        <com.example.quizapplication.font.TextViewFont
            android:id="@+id/weekly_score_tv_time_Sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_score_tv_time_Day_1"
            android:layout_marginLeft="192dp"
            android:text="@string/seconds"
            android:textSize="6pt" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weekly_score_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/wee_btn_next"
        android:layout_below="@+id/weekly_score_relative_ScoreCard"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/weekly_score_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/weekly_score_imgVw_opponent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/female_list" >
            </ImageView>

            <ImageView
                android:id="@+id/weekly_score_imgVw_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/female_list" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_score_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.example.quizapplication.font.TextViewFont
                android:id="@+id/weekly_score_txt_name_opponent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="dhara"
                android:textColor="#FFFFFF"
                android:textSize="7pt" />

           <com.example.quizapplication.font.TextViewFont
                android:id="@+id/weekly_score_txt_name_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rutu"
                android:textColor="#FFFFFF"
                android:textSize="7pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekly_score_score"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.example.quizapplication.font.TextViewFont
                android:id="@+id/weekly_score_txt_opponent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="12pt"
                android:textStyle="bold" />

            <com.example.quizapplication.font.TextViewFont
                android:id="@+id/weekly_score_txt_name_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:text="@string/seprater"
                android:textColor="#FFFFFF"
                android:textSize="12pt"
                android:textStyle="bold" />

            <com.example.quizapplication.font.TextViewFont
                android:id="@+id/weekly_score_txt_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="15dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="12pt"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/wee_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/yellow_button"
        android:gravity="center"
        android:text="@string/next" />

</RelativeLayout>