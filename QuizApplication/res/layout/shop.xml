<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgscreen" >

    <LinearLayout
        android:id="@+id/shop_linear_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/shop_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/top_bar_back_button"
            android:onClick="OnClickHandler"
            android:text="@string/back" />

        <ImageView
            android:id="@+id/shop_imgVw_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/none"
            android:src="@drawable/quiz_main_logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/shop_HearderText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_linear_top"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/shop"
        android:textColor="@android:color/white"
        android:textSize="12pt" />

    <LinearLayout
        android:id="@+id/shop_linear_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_HearderText"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_layout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shop_imgVw_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/none"
            android:src="@drawable/redcross" />

        <TextView
            android:id="@+id/shop_tv_62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="62"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/shop_tv_owned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/owned"
            android:textColor="@android:color/white"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_linear_body1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_linear_body"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_layout"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/shop_linear1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_imgVw_coin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/redcross" />

            <TextView
                android:id="@+id/shop_tv_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="200"
                android:textColor="@android:color/white"
                android:textSize="10pt" />

            <Button
                android:id="@+id/gameSummary_btnNext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/orangebutton_small"
                android:gravity="center"
                android:onClick="OnClickHandler"
                android:text="@string/next" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/shop_linear2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_imgVw_coin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/redcross" />

            <TextView
                android:id="@+id/shop_tv_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1000"
                android:textColor="@android:color/white"
                android:textSize="10pt" />
            <Button
                android:id="@+id/gameSummary_btnNext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/orangebutton_small"
                android:gravity="center"
                android:onClick="OnClickHandler"
                android:text="@string/next" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/shop_linear3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_imgVw_coin4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/redcross" />

            <TextView
                android:id="@+id/shop_tv_2500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="2500"
                android:textColor="@android:color/white"
                android:textSize="10pt" />
            <Button
                android:id="@+id/gameSummary_btnNext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/orangebutton_small"
                android:gravity="center"
                android:onClick="OnClickHandler"
                android:text="@string/next" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/shop_linear4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_imgVw_coin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/redcross" />

            <TextView
                android:id="@+id/shop_tv_5000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="5000"
                android:textColor="@android:color/white"
                android:textSize="10pt" />
            <Button
                android:id="@+id/gameSummary_btnNext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/orangebutton_small"
                android:gravity="center"
                android:onClick="OnClickHandler"
                android:text="@string/next" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/shop_linear5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_imgVw_coin6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:src="@drawable/redcross" />

            <TextView
                android:id="@+id/shop_tv_10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="10000"
                android:textColor="@android:color/white"
                android:textSize="10pt" />
            <Button
                android:id="@+id/gameSummary_btnNext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/orangebutton_small"
                android:gravity="center"
                android:onClick="OnClickHandler"
                android:text="@string/next" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>