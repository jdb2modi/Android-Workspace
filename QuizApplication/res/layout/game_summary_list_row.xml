<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <com.example.quizapplication.font.TextViewFont
        android:id="@+id/gameSummary_listrow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="7pt" />

    <ImageView
        android:id="@+id/gameSummary_listrow_imageRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/none"
        android:src="@drawable/female_list" />
    
    <TextView 
        android:id="@+id/gameSummary_listrow_textSec"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_below="@+id/gameSummary_listrow_imageRight"
        android:text="1.2s"
          android:layout_alignParentRight="true"
      android:layout_marginRight="10dp"
        android:background="#F80000"/>

</RelativeLayout>