<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg1"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinAge"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:background="@color/Blue"
        android:text="Select Age to Delete : "
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinDeleteAge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTemp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:textColor="@color/Blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDeleteNow"
        style="@style/btnStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinDeleteAge"
        android:layout_margin="2dp"
        android:text="@string/txtDeleteNow" />

    <Button
        android:id="@+id/btnDeleteAllNow"
        style="@style/btnStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDeleteNow"
        android:layout_margin="2dp"
        android:text="@string/txtDeleteAll" />

    <Button
        android:id="@+id/btnGoBackFromDelete"
        style="@style/btnStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDeleteAllNow"
        android:layout_margin="2dp"
        android:text="@string/txtGoBack" />

</RelativeLayout>