<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/txtDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtDemo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDemo"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtDemo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDemo2"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtDemo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDemo3"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtDemo5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDemo4"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtDemo6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDemo5"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtDemo7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDemo6"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textSize="22dp" />

</RelativeLayout>