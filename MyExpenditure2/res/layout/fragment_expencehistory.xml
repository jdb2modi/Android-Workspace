<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/rel_historyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#224581ff" >

        <Button
            android:id="@+id/btn_exitFromHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:background="@drawable/mybutton"
            android:text="Exit"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_backFromHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/mybutton"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_contentOnHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/txt_contentHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="History"
            android:textAllCaps="false"
            android:textColor="#0072B2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/viewSeperatorTitle"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txt_contentHistory"
            android:layout_margin="5dp"
            android:background="#440072B2" />

        <Button
            android:id="@+id/btn_startingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewSeperatorTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/mybutton"
            android:ems="10"
            android:onClick="setDate"
            android:text="Starting Date"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_startingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_startingDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Sdate"
            android:textAllCaps="false"
            android:textColor="#0072B2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_endingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_startingDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/mybutton"
            android:ems="10"
            android:onClick="setDate2"
            android:text="Ending Date"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_endingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_endingDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Edate"
            android:textAllCaps="false"
            android:textColor="#0072B2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_showSpecificHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_endingDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/mybutton"
            android:ems="10"
            android:text="Show History"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/viewSeperator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/btn_showSpecificHistory"
            android:layout_margin="5dp"
            android:background="#440072B2" />

        <Button
            android:id="@+id/btn_showAllHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewSeperator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/mybutton"
            android:ems="10"
            android:text="Show All History"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>