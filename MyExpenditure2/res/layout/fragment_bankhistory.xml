<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <HorizontalScrollView
        android:id="@+id/hscroll_customBankDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rel_customBankContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_accountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:ems="7"
                android:text="accountnumber"
                android:textAllCaps="false"
                android:textColor="#0072B2"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_bankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/txt_accountNumber"
                android:ems="7"
                android:text="bankName"
                android:textAllCaps="false"
                android:textColor="#0072B2"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_currentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/txt_bankName"
                android:ems="7"
                android:text="currentBalance"
                android:textAllCaps="false"
                android:textColor="#0072B2"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </HorizontalScrollView>

</LinearLayout>