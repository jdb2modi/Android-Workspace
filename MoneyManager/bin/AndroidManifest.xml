<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zaptech.moneymanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/jmoneylogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AddExpence"
            android:label="@string/title_activity_add_expence" >
        </activity>
        <activity
            android:name=".AddIncome"
            android:label="@string/title_activity_add_income" >
        </activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ExpenceHistory"
            android:label="@string/title_activity_expence_history" >
        </activity>
        <activity
            android:name=".IncomeHistory"
            android:label="@string/title_activity_income_history" >
        </activity>

        <receiver android:name=".MinBalReceiver" >
            <intent-filter>
                <action android:name="MinimumBalance" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Activity_Welcome"
            android:label="@string/title_activity_activity__welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name=".Activity_Registration"
            android:label="@string/title_activity_activity__registration" >
        </activity>
    </application>

</manifest>